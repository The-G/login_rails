<h1>INDEX</h1>

<% if @email %>
    <h3><%=@email%>, Welcome your login</h3>
<% end %>

<% @user.each do |u| %>
    <%= u.email %> |
    <%= u.password %> |
    <a href="/user/modify/<%=u.id%>">Modify</a> |
    <a href="/user/destroy/<%=u.id%>">Delete</a>
    <br>
<% end %>

<br>
<% unless @email %>
    <a href="/user/new">Sign Up</a>
    <a href="/user/login">Login</a>
<% end %>